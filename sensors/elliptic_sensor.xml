<ellipticSensorSetup xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="elliptic_sensor.xsd">
  <sensors>
    <sensor name="Elliptic Proximity" reader="hexagon" sensor_type="8" type="4" subtype="401" audio_notify="ultrasound-proximity" debug="false">
	  <ranges>
        <near value="0.0" limit="1.0"></near>
        <far  value="3.0" limit="5.0"></far>
      </ranges>
	</sensor>
  </sensors>

  <readers>
    <reader name="hexagon"></reader>
  </readers>
</ellipticSensorSetup>
